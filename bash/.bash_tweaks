# Git in Bash
source ~/.git-prompt.sh
GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWSTASHSTATE=1

# User-defined tweaks
PS1='${debian_chroot:+($debian_chroot)}\[\033[01m\]$(hostname)\[\033[00m\]:\[\033[01;34m\]\W$(__git_ps1 " (\[\033[01;32m\]%s\[\033[01;34m\])") \[\033[00m\]\u\$ '

# Other parameters
export EDITOR=vim
